{
    "compilerOptions": {
      "target": "esnext",
      "module": "ESNext",
      "moduleResolution": "node",
      "jsx": "preserve",
      "esModuleInterop": true,
      "strict": true,
      "isolatedModules": true,
      "skipLibCheck": true,
      "lib": ["ESNext", "DOM"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["node_modules"]
  }